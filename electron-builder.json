{
  "appId": "com.zeebe.ZeebeModeler",
  "productName": "Zeebe Modeler",
  "files": [
    {
      "filter": [
        "**",
        "!test",
        "!dev.js"
      ]
    }
  ],
  "afterPack": "./tasks/after-pack.js",
  "win": {
    "target": [
      {
        "target": "zip",
        "arch": [ "x64", "ia32" ]
      }
    ]
  },
  "linux": {
    "category": "Development",
    "target": [
      {
        "target": "tar.gz",
        "arch": [ "x64", "ia32" ]
      }
    ]
  },
  "mac": {
    "target": [
      "dmg",
      "zip"
    ]
  },
  "fileAssociations": [
    {
      "ext": "bpmn",
      "name": "ZeebeModeler.BPMN",
      "description": "BPMN file",
      "role": "Editor",
      "mimeType": "application/bpmn"
    }
  ]
}