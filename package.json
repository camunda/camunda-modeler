{
  "name": "camunda-modeler-builder",
  "version": "0.0.0",
  "description": "Camunda Modeler for BPMN, DMN and CMMN, based on bpmn.io",
  "scripts": {
    "app:auto-test": "npm run app:test -- --watch",
    "app:dev": "electron app/dev",
    "app:test": "mocha -r ./app/test/expect --recursive app/test",
    "client:build": "(cd client && npm run build)",
    "client:auto-test": "(cd client && npm run auto-test)",
    "client:dev": "(cd client && npm run dev)",
    "client:test": "(cd client && npm run test)",
    "all": "run-s clean lint test \"build -- {@}\" --",
    "auto-test": "run-p *:auto-test",
    "clean": "del-cli 'distro/*' app/public",
    "dev": "run-p *:dev",
    "distro": "node tasks/distro.js",
    "distro:test-archives": "node tasks/test-distro.js",
    "build": "run-s client:build \"distro -- {@}\" \"distro:test-archives -- {@}\" --",
    "lint": "eslint .",
    "postinstall": "lerna bootstrap --hoist",
    "release": "lerna publish",
    "test": "run-s *:test"
  },
  "author": "Camunda <http://camunda.com>",
  "license": "SEE LICENSE IN LICENSE",
  "homepage": "https://github.com/camunda/camunda-modeler",
  "repository": {
    "type": "git",
    "url": "https://github.com/camunda/camunda-modeler"
  },
  "devDependencies": {
    "archiver": "^2.1.1",
    "chai": "^4.1.2",
    "cpx": "^1.5.0",
    "decompress": "^4.2.0",
    "del": "^3.0.0",
    "del-cli": "^1.1.0",
    "electron": "^2.0.8",
    "electron-builder": "^20.17.0",
    "electron-publisher-s3": "^20.17.2",
    "electron-reloader": "^0.2.0",
    "eslint": "^4.16.0",
    "eslint-plugin-bpmn-io": "^0.5.2",
    "execa": "^0.10.0",
    "karma-webpack": "^2.0.6",
    "lerna": "^2.8.0",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.1",
    "sinon": "^6.1.4",
    "sinon-chai": "^2.8.0",
    "which": "^1.2.0",
    "yargs": "^11.0.0"
  }
}
